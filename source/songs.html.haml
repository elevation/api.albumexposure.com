%h2 Songs

%h3 List all

%p Lists all the songs that belong to this user

%h4 GET /songs.json OR /songs.xml

%h5 Response

.tabs
  %ul
    %li= link_to "JSON response", "#index-json"
    %li= link_to "XML Response", "#index-xml"

  #index-json
    %pre
      %code
        :preserve
          [
            {
              id: 123,
              title: "Shut Up",
              song_file_size: 192968,
              song_file_name: "06 Shut Up.mp3",
              url: "http://assets.albumexposure.com/song/file/2317/06%20Shut%20Up.mp3",
              artist: "Five Iron Frenzy"
            }
            ...
          ]
  #index-xml
    %pre
      %code
        = preserve do
          :escaped
            <songs type="array">
              <song>
                <id>123</song>
                <artist>Five Iron Frenzy</artist>
                <song-file-name>06 Shut Up.mp3</song-file-name>
                <song-file-size type="integer">192968</song-file`-size>
                <title>Shut Up</title>
                <url>http://assets.albumexposure.com/song/file/2317/06%20Shut%20Up.mp3</url>
              </song>
              ...
            </songs>

